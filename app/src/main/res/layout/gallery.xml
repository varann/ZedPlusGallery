<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg"
	android:orientation="vertical">

	<zedplus.gallery.ui.genres.GenresRecyclerView
		android:id="@+id/genres_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/offset_normal"
		android:layout_marginEnd="@dimen/offset_small"
		android:layout_marginStart="@dimen/offset_small"
		android:layout_marginTop="@dimen/offset_normal"
		android:background="@drawable/genres_bg" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginBottom="@dimen/offset_normal"
		android:layout_marginTop="@dimen/offset_normal"
		android:src="@drawable/arrow" />

	<zedplus.gallery.ui.movies.MoviesRecyclerView
		android:id="@+id/movies_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/offset_small"
		android:clipToPadding="false" />

</LinearLayout>